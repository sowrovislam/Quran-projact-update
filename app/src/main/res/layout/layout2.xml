<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:orientation="vertical"
        android:background="@drawable/bacroundcard"
        android:layout_marginStart="@dimen/_8ssp"
        android:layout_marginEnd="@dimen/_8ssp"
        android:layout_marginTop="@dimen/_8ssp"
        android:id="@+id/cardButton"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"



                >


                <TextView
                    android:id="@+id/tvnumbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                  android:padding="@dimen/_3ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/white"
                    android:background="@drawable/countbacround"
                    android:textStyle="bold"/>



                <TextView
                    android:id="@+id/tvBangla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="meccan"
                    android:padding="@dimen/_5ssp"
                    android:layout_marginStart="@dimen/_9sdp"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_5ssp"

                    android:textColor="@color/black"
                    android:textStyle="normal"

                    />








            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_9sdp"



                >




                <TextView
                    android:id="@+id/tvRb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الفاتحة"
                    android:padding="@dimen/_5ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"

                    />



                <TextView
                    android:id="@+id/tvEnglish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Al-Fatihah"
                    android:padding="@dimen/_5ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_5ssp"

                    android:textColor="@color/black"
                    android:textStyle="bold"

                    />









            </LinearLayout>










        </RelativeLayout>












    </LinearLayout>






</RelativeLayout>